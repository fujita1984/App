@model List<HskTypingWeb.Models.HskWord>
@{
    ViewData["Title"] = "HSK単語一覧";
    var levels = ViewBag.Levels as List<int> ?? new List<int>();
    var selectedLevel = ViewBag.SelectedLevel as int?;
    var sortColumn = ViewBag.SortColumn as string ?? "Id";
    var sortDirection = ViewBag.SortDirection as string ?? "asc";
}

<h1>HSK単語一覧</h1>

<div class="mb-3">
    <form method="get" class="row g-3 align-items-center">
        <div class="col-auto">
            <label for="level" class="col-form-label">HSKレベル:</label>
        </div>
        <div class="col-auto">
            <select name="level" id="level" class="form-select" onchange="this.form.submit()">
                <option value="">-- 選択してください --</option>
                @foreach (var lvl in levels)
                {
                    <option value="@lvl" selected="@(selectedLevel == lvl)">HSK @lvl</option>
                }
            </select>
        </div>
        <div class="col-auto">
            @if (Model.Any())
            {
                <span class="badge bg-primary fs-6">@Model.Count 件</span>
            }
        </div>
    </form>
</div>

@if (selectedLevel != null && Model.Any())
{
    <table class="table table-striped table-hover">
        <thead class="table-dark">
            <tr>
                <th>@Html.ActionLink("中国語", "Index", new { level = selectedLevel, sortColumn = "Chinese", sortDirection = sortColumn == "Chinese" && sortDirection == "asc" ? "desc" : "asc" }, new { @class = "text-white text-decoration-none" })
                    @if (sortColumn == "Chinese") { <span>@(sortDirection == "asc" ? "▲" : "▼")</span> }
                </th>
                <th>@Html.ActionLink("ピンイン", "Index", new { level = selectedLevel, sortColumn = "Pinyin", sortDirection = sortColumn == "Pinyin" && sortDirection == "asc" ? "desc" : "asc" }, new { @class = "text-white text-decoration-none" })
                    @if (sortColumn == "Pinyin") { <span>@(sortDirection == "asc" ? "▲" : "▼")</span> }
                </th>
                <th>@Html.ActionLink("日本語", "Index", new { level = selectedLevel, sortColumn = "Japanese_Meaning", sortDirection = sortColumn == "Japanese_Meaning" && sortDirection == "asc" ? "desc" : "asc" }, new { @class = "text-white text-decoration-none" })
                    @if (sortColumn == "Japanese_Meaning") { <span>@(sortDirection == "asc" ? "▲" : "▼")</span> }
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var word in Model)
            {
                <tr style="cursor: pointer;" onclick="playAudio(@word.Id)">
                    <td class="fs-4">@word.Chinese</td>
                    <td>@word.Pinyin_With_Tone</td>
                    <td>@word.Japanese_Meaning</td>
                </tr>
            }
        </tbody>
    </table>
}
else if (selectedLevel != null)
{
    <div class="alert alert-info">該当する単語がありません。</div>
}

<audio id="audioPlayer" style="display:none;"></audio>

@section Scripts {
    <script>
        function playAudio(id) {
            const audio = document.getElementById('audioPlayer');
            audio.src = '/audio/hsk/' + id + '.mp3';
            audio.play().catch(function(error) {
                console.error('Audio playback failed:', error);
            });
        }
    </script>
}
